<div class="left-side-bar" id="left-side-bar">
    <div>
        <a class="channel" href="/friends">
            Friends
        </a>
    </div>
    <h1 id="bundles-header" style="display: none;">Groups</h1>
    <div id="bundles-container">
    </div>
    <h1 id="channels-header" {{#unless channels}} style="display: none;" {{/unless}}>Channels</h1>
    <div id="channels-container">
        {{#each channels}}
            {{>channel this}}
        {{/each}}
    </div>
    <div class="new-channel fake-channel-button-container">
        <button id="new-channel-button" class="fake-channel-button">New Channel</button>
        <dialog id="new-channel-dialog">
            <div class="dialog-header">
                <div class="dialog-title">
                    New Channel
                </div>
                <button autofocus id="new-channel-button-x" class="close-button"><i class="fa fa-remove"></i></button>
            </div>

            <div>
                <div style="margin: 4px;">
                    <div style="font-size: 0.9em; color: var(--text)">Name:</div>
                    <input type="text" id="new-channel-button-name-input">
                </div>
                <div style="margin: 4px;">
                    <button id="new-channel-button-create">Create</button>
                </div>
            </div>
        </dialog>
    </div>
    <div class="new-bundle fake-channel-button-container">
        <button id="new-bundle-button" class="fake-channel-button">New Bundle</button>
        <dialog id="new-bundle-dialog">
            <div class="dialog-header">
                <div class="dialog-title">
                    New Bundle
                </div>
                <button autofocus id="new-bundle-button-x" class="close-button"><i class="fa fa-remove"></i></button>
            </div>

            <div>
                <div style="margin: 4px;">
                    <div style="font-size: 0.9em; color: var(--text)">Channels:</div>
                    <select id="new-bundle-select">

                    </select>
                    <button id="new-bundle-button-add-channel">Add</button>
                    <div id="current-bundle-channels">

                    </div>
                </div>
                <div style="margin: 4px;">
                    <div style="font-size: 0.9em; color: var(--text)">Name:</div>
                    <input id="new-bundle-name">
                </div>
                <div style="margin: 4px;">
                    <button id="new-bundle-button-create">Create</button>
                </div>
            </div>
        </dialog>
    </div>
</div>